.chart-container {
  width: 750rpx;
  height: 600rpx;
  padding: 40rpx 16rpx;
}

.line-block {
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 8rpx;
}

.canvas {
  position: absolute;
  width: 720rpx;
  height: 206px;
  top: 10%;
  box-shadow: 0px 4px 16px 0px rgba(0, 0, 0, 0.16);
}

.line-block .title {
  padding: 36rpx;
  color: rgba(135, 140, 151, 100);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}

.mood-desc {
  margin-bottom: 40rpx;
  text-align: center;
  color: rgba(29, 21, 42, 100);
  font-size: 40rpx;
  font-family: PingFangSC-regular;
  position: absolute;
  left: 2.45px;
  top: 325.75px;
  background-color: #fff;
}

.mood-desc text {
  color: #238A55;
}

#search {
  margin: 10px 50px;
  width: 224px;
  height: 39px;
  border-radius: 8px;
  border-top-right-radius: 0px;
  border-bottom-right-radius: 0px;
  opacity: 1;

  /* 自动布局 */
  display: flex;
  flex-direction: column;
  padding: 8px;
  gap: 10px;
  align-self: stretch;

  /* 纯白 */
  background: #FFFFFF;

  box-sizing: border-box;
  border: 1px solid #BFBFBF;

}

#search-button {
  position: absolute;
  left: 274.41px;
  top: 9.24px;
  width: 74.99px;
  height: 40.38px;
  border-radius: 0px 9px 9px 0px;
  background-color: #2D6DED;
  font-size: large;
  color: white;
}

#search-icon {
  /* search */
  position: absolute;
  left: 10px;
  top: 13.44px;
  width: 31.58px;
  height: 31.55px;
}
